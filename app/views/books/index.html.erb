<h1>投稿一覧</h1>

<% @books.each do |book| %>

  <p>タイトル</p>
  <span>
  <%= link_to book.title, book_path(book.id)%>
  </span>

<% end %>

<h1>新規投稿</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>2 errors prohibited this book from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: '/books', method: :post do |f| %>
   <h4>タイトル</h4>
   <%= f.text_field :title %>


  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
  <% end %>