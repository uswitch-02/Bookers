<h1>投稿一覧</h1>

<% @books.each do |book| %>

  <p>タイトル</p>
  <span>
  <%= link_to book.title, book_path(book.id)%>
  </span>

<% end %>




<h1>新規投稿</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
   <h4>タイトル</h4>
   <%= f.text_field :title %>


  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
  <% end %>